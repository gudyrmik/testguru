<h1><%= t('.header') %></h1>


<p><%= link_to t('.new_test_link'), new_admin_test_path %></p>

<table class="table">
  <tr>
    <th class="sort-by-title pointer">
      <%= t('.title') %>
      <%= octicon 'arrow-up', class: 'text-success hide' %>
      <%= octicon 'arrow-down', class: 'text-success hide' %>
    </th>
    <th><%= t('.level') %></th>
    <th><%= t('.questions') %></th>
    <th colspan="3"><%= t('.actions') %></th>
  </tr>
  <%= render @tests %>
</table>

<h1><%= t('.gist_header') %></h1>
<table>
  <tr>
    <th><%= t('.gist_question') %></th>
    <th><%= t('.gist_id') %></th>
    <th><%= t('.gist_user') %></th>
  </tr>
  <%= render @gists %>
</table>