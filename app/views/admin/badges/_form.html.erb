<%= form_with model: [:admin, @badge], local: true do |form| %>

<%= render 'shared/errors', resource: @badge %>

<p>
  <%= form.label :title %><br>
  <%= form.text_field :title %>
</p>

<p>
  <%= form.label :image_url %><br>
  <%= form.text_field :image_url %>
</p>

<p>
  <%= form.label :badge_rule_subject %>
  <%= form.select :rule_subject, badges_rules %>
</p>

<p>
  <%= form.label :badge_rule_objective %><br>
  <%= form.text_field :rule_objective %>
</p>

<p><%= form.submit %></p>
<% end %>