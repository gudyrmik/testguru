<%= form_with model: [:admin, @badge], local: true do |form| %>

<%= render 'shared/errors', resource: @badge %>

<p>
  <%= form.label :title %><br>
  <%= form.text_field :title, id: :badge_title %>
</p>

<p>
  <%= form.label :image %><br>
  <%= form.text_field :image, id: :badge_image %>
</p>

==================================
<p>
  <%= form.label :type %>
  <%= form.collection_select :type, Category.all, :id, :title, prompt: true %>
</p>
==================================
<p><%= form.submit %></p>
<% end %>