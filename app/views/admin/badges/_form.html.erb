<%= form_with model: [:admin, @badge], local: true do |form| %>

<%= render 'shared/errors', resource: @badge %>

<p>
  <%= form.label :title %><br>
  <%= form.text_field :title, id: :title %>
</p>

<p>
  <%= form.label :image %><br>
  <%= form.text_field :image, id: :image %>
</p>

<p>
  <%= form.label :badge_type_id %>
  <%= form.collection_select :badge_type_id, BadgeType.all, :id, :title, prompt: true %>
</p>

<p><%= form.submit %></p>
<% end %>