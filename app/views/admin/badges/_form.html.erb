<%= form_with model: [:admin, @badge], local: true do |form| %>

<%= render 'shared/errors', resource: @badge %>

<p>
  <%= form.label :title %><br>
  <%= form.text_field :title, id: :title %>
</p>

<p>
  <%= form.label :image_url %><br>
  <%= form.text_field :image_url, id: :image %>
</p>

<p>
  <%= form.label :badge_rule %>
  <%= form.select :rule, BadgeService.rules { |rule| [ rule[1] ] } %>
</p>

<p><%= form.submit %></p>
<% end %>